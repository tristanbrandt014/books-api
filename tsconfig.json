{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "lib": ["es6", "esnext"],
    "types": ["node"],
    "baseUrl": ".", // required for "paths",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
